<p id="notice"><%= notice %></p>
<div class="row">

  <h1>Image Gallery</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Picture</th>
        <th>Uploaded by</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= image.name %></td>
          <td><%= image.description %></td>
          <td>
            <%= link_to(image) do %>
              <%= image_tag image.picture_url(:thumb) if image.picture? %>
            <% end %>
          </td>
          <td><%= image.uploaded_by %></td>
          <td><%= link_to 'Edit', edit_image_path(image) %></td>
          <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Image', new_image_path %>
</div>
