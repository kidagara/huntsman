<% content_for :title, "Posts" %>
<p id="notice"><%= notice %></p>
  <div class="row">
  <h1>All Posts</h1>
  <%= link_to 'Make a new post', new_post_path, class: "button" %>
  <div class="posts-home">

      <% @posts.each do |post| %>
        <div>
          <p><%= post.post_text %></p>
          <p>- <span class="posted-by-name"><%= post.posted_by %></span> <span class="posted-at"><%= post.created_at.strftime("%d %b %y") %></span></p>
          <!-- <td><%= link_to 'Show', post %></td> -->
          <% if current_user.name == post.posted_by || current_user.username == "elizabethh" %>
            <%= link_to "edit post", edit_post_path(post) %> | <%= link_to 'delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          <hr />
        </div>
      <% end %>

  </div>

</div>
